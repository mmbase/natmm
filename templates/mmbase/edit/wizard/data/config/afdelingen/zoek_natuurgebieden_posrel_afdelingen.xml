<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="afdelingen" minoccurs="0" maxoccurs="*"
   orderby="titel" ordertype="string" hidecommand="move-up|move-down">
   <title>afdelingen</title>
   <item>
      <field ftype="data" name="titel"><prompt>naam</prompt></field>
      <field ftype="startwizard" wizardname="config/afdelingen/afdelingen" />
   </item>
   <command name="search" nodepath="afdelingen" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek afdeling</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
     <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/afdelingen/afdelingen" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="afdelingen" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='afdelingen']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>