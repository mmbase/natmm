    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{MM-dd HH:mm:ss} %m%n" />
    </layout>
  </appender>
-->

    <logger name="org.mmbase.security" >
        <level class="&mmlevel;" value="@log.level@" />
    </logger>

    <logger name="org.mmbase.security.implementation.cloud.Verify" >
       <level class="&mmlevel;" value="error" />
    </logger>   

    <logger name="org.mmbase.util.XMLErrorHandler" >
       <level class="&mmlevel;" value="@log.level@" />
    </logger>

    <logger name="mmbase.applications.editwizard.Utils" >
       <level class="&mmlevel;" value="@log.level@" />
    </logger>

    <logger name="org.mmbase.PAGE.LOGTAG" >
        <level class="&mmlevel;" value="service" />
    </logger>
    
    <logger name="nl.leocms.servlets.IPFilter" >
        <level class="&mmlevel;" value="info" />
    </logger>    

   <logger name="nl.leocms.evenementen.SubscribeAction">
      <level class="&mmlevel;" value="info" />
   </logger>
   
   <logger name="nl.natuurmonumenten.activiteiten">
      <level class="&mmlevel;" value="info" />
   </logger>
   
   <!-- SQL logging -->
<!--  
   <logger name="org.mmbase.module.database.MultiConnection" additivity="false">
    <level class="&mmlevel;" value ="info" />   
    <appender-ref ref="sqllog" />
   </logger>
-->

    <logger name="STDERR">
       <level class="&mmlevel;" value="@log.level@" />   
    </logger>

    <root>
        <level class="&mmlevel;" value="@log.level@" />
        <appender-ref ref="logfile" />
    </root>
    
</log4j:configuration>
