<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-projects">
    <title>projecten</title>
    <task-description>Use this wizard to edit a teaser.</task-description>
    <action include="config/projects/create_projects.xml" />
    <action include="config/projects/delete_projects.xml" />
    <action include="config/projects/load_projects.xml" />
    <steps>
        <step form-schema="edit_projects" />
    </steps>
    <form-schema id="edit_projects">
   	<title>project</title>
   	<field name="titel" dtminlength="1"><prompt>naam</prompt></field>
   	<list include="config/projecttypes/add_projecttypes_posrel.xml" />
   	<field name="goal" ftype="html"><prompt>doel</prompt></field>
   	<field name="omschrijving" ftype="html"><prompt>projectverloop</prompt></field>
   	<field name="begindate" ftype="date"><prompt>aanvangs datum</prompt></field>
   	<field name="enddate" ftype="date"><prompt>eind datum</prompt></field>
   	<list include="config/paragraaf/zoek_artikel_posrel_paragraaf.xml" />
   	<list include="config/medewerkers/zoek_readmore_medewerkers.xml" />
   	<list include="config/afdelingen/zoek_evenement_readmore_afdelingen.xml" />
   	<list include="config/contentblocks/add_contentblocks_readmore.xml" />
   	<list include="config/phases/add_phases_phaserel.xml" />
    </form-schema>
</wizard-schema>
