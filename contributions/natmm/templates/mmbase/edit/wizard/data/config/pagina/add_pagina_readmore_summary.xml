<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="pagina" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>paginas waarvan de laatste nieuwsberichten worden getoond</title>
	<item>
		<title></title>
		<description>pagina</description>
    <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
		<field name="titel" ftype="data"><prompt>naam</prompt></field>
  </item>
  <action type="create">
      <relation destinationtype="pagina" role="readmore">
         <object type="pagina" /> <!-- necessary for command insert -->
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='pagina']/field[@name='pos'])+{$pos}}</field>
      </relation>
  </action>
	<command name="search" nodepath="pagina" fields="titel" orderby="titel" age="-1">
     <prompt>zoek pagina</prompt>
     <search-filter>
       <name>naam bevat</name>
       <search-fields>titel</search-fields>
     </search-filter>
	</command>
</list>
