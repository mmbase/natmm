<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="pools">
	<title>materiaal</title>
	<task-description>Use this wizard to edit a pool.</task-description>
	<action include="config/pools/create_pools.xml" />
  <action include="config/pools/delete_pools.xml" />
	<action type="load">
    <field name="name" />
    <field name="name_eng" />
    <field name="name_fra" />
    <field name="name_de" />
    <field name="view" />
    <field name="language" />
    <field name="description" />
    <relation destination="contentelement" role="posrel" />
  </action>
  <steps>
		<step form-schema="edit_pools" />
	</steps>
	<form-schema id="edit_pools">
		<field name="name"><prompt>naam (nl)</prompt></field>
		<field name="name_eng" dtrequired="false"><prompt>naam (en)</prompt></field>
		<field name="name_fra" dtrequired="false"><prompt>naam (fr)</prompt></field>
		<field name="name_de" dtrequired="false"><prompt>naam (de) __________________</prompt></field>
    <list include="config/items/add_items_posrel_ml.xml" />
  </form-schema>
</wizard-schema>
