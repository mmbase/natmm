<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="kb_question">
	<title>vraag</title>
	<task-description>Use this wizard to edit a question.</task-description>
	<action include="config/kb_question/create_kb_question.xml" />
  <action include="config/kb_question/delete_kb_question.xml" />
	<action include="config/kb_question/load_kb_question.xml" />
  <lists>
    <optionlist include="config/option_lists/true_false.xml" />
  </lists>
	<steps>
		<step form-schema="edit_kb_question" />
	</steps>
	<form-schema id="edit_kb_question">
	  <!-- <field name="name" ftype="line" /> -->
		<field name="question" ftype="line" />
		<field name="pos" ftype="line"><prompt>positie</prompt></field>
		<field name="date" />
		<field name="comment" ftype="html" rows="12" />
		<field name="description" ftype="html" rows="12" />
		<field name="visible" ftype="enum"><optionlist select="true_false"/></field>
		<!-- <field name="email" ftype="line" /> -->
		<list include="config/kb_answer/add_kb_answer.xml" />
    <list include="config/kb_category/add_kb_category.xml" />
	</form-schema>
</wizard-schema>
