<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="ads"
        minoccurs="0" maxoccurs="*"
        orderby="expiredate"
        ordertype="number">
   <title>Berichten</title>
   <item>
     <title></title>
     <field name="title" ftype="data"><prompt>titel</prompt></field>
     <field name="text" rows="4" ftype="data"><prompt>tekst</prompt></field>
     <field name="name" ftype="data"><prompt>naam</prompt></field>
     <field name="email" ftype="data"><prompt>email</prompt></field>
     <field name="postdate" ftype="data"><prompt>plaatsingsdatum</prompt></field>
     <field name="expiredate" ftype="data"><prompt>bevestigingsdatum</prompt></field>
     <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/ads/ads">
         <prompt></prompt>
     </field>
   </item>
   <command name="startwizard" inline="true" wizardname="config/ads/ads" objectnumber="new"/>
   <command name="search" nodepath="ads" fields="title,name,email" age="-1">
      <prompt></prompt>
      <search-filter>
              <name>Titel bevat</name>
              <search-fields>title</search-fields>
      </search-filter>
      <search-filter>
              <name>Naam bevat</name>
              <search-fields>name</search-fields>
      </search-filter>     
      <search-filter>
              <name>Email bevat</name>
              <search-fields>email</search-fields>
      </search-filter>     
   </command>
   <action type="create">
        <relation role="posrel">
            <object type="ads" />
            <field name="pos">-1</field>
        </relation>
   </action>
</list>     
