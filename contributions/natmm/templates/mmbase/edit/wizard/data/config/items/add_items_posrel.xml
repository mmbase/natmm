<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="items"
    minoccurs="0" maxoccurs="*"
    orderby="field[@name='pos']"
    ordertype="number" >
    <title>items (bij twee kolommen is oneven links en even rechts)</title>
    <item>
        <title></title>
        <description>items</description>
        <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/items/items">
            <prompt></prompt>
        </field>
        <field name="titel" ftype="data">
            <prompt>titel</prompt>
        </field>
        <field fdatapath="field[@name=&apos;pos&apos;]" >
             <prompt>positie</prompt>
        </field>
        <list include="config/images/zoek_posrel_images.xml" />
     </item>
    <action type="create">
        <relation role="posrel">
            <object type="items" />
            <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='items']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>
    <command name="search" nodepath="items" fields="titel" orderby="titel" age="-1">
        <prompt>zoek item</prompt>
        <search-filter>
            <name>titel bevat</name>
            <search-fields>titel</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/items/items" objectnumber="new"/>
</list>
