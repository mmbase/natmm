<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="formulierveld" minoccurs="1" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>vraag</title>
	<item>
	   <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field name="label" ftype="data"><prompt>label</prompt></field>
		<field ftype="startwizard" wizardname="config/formulierveld/formulierveld_shop" />
	</item>
	<command name="search" nodepath="formulierveld" age="-1" fields="label" orderby="label">
		<prompt>zoek vraag</prompt>
      <search-filter>
         <name>label bevat</name>
         <search-fields>[label]</search-fields>
      </search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/formulierveld/formulierveld_shop" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="formulierveld" role="posrel">
	      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='formulierveld']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

