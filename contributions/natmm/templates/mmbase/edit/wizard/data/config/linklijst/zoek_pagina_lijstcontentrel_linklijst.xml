<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="lijstcontentrel" destination="linklijst" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>linklijst</title>
	<item>
    <field ftype="line" name="naam"><prompt>naam</prompt></field>
    <list include="config/link/zoek_linklijst_lijstcontentrel_link.xml" />
   	<!-- field ftype="startwizard" wizardname="config/linklijst/linklijst" / -->
	</item>
	<command name="search" nodepath="linklijst" age="-1" fields="naam" >
		<prompt>zoek linklijst</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>[naam]</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/linklijst/linklijst" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="linklijst" role="lijstcontentrel">
	    <field name="pos">{sum(//relation[@role='lijstcontentrel' and @lastitem='true' and object/@type ='linklijst']/field[@name='pos'])+{$pos}}</field>
    </relation>
	</action>
</list>
