<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="ctexts"
        minoccurs="0" maxoccurs="*"
        orderby="field[@name='pos']"
        ordertype="number">
    <title>inleidende / afsluitende teksten</title>
    <item>
        <title></title>
        <field fdatapath="field[@name=&apos;pos&apos;]" ftype="enum"><prompt>gebruik</prompt>
                <optionlist select="ctexts_types"></optionlist>
        </field>
        <field name="title" ftype="line" ><prompt>titel (niet zichtbaar)</prompt></field>
    </item>
    <command name="search" nodepath="ctexts" fields="title" orderby="number" directions="down" age="-1">
        <prompt>zoek tekst</prompt>
        <search-filter>
            <name>titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/ctexts/ctexts" objectnumber="new"/>
    <action type="create">
        <relation role="posrel">
            <object type="ctexts" />
            <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='ctexts']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>
</list>     
