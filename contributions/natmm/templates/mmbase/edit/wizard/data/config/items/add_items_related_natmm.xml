<list role="related" destination="items"
    minoccurs="0" maxoccurs="*"
    orderby="field[@name='pos']"
    ordertype="number" >
    <title>items</title>
    <item>
        <title></title>
        <description>items</description>
        <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/items/items_shop_natmm">
            <prompt></prompt>
        </field>
        <field name="titel" ftype="data">
            <prompt>titel</prompt>
        </field>
     </item>
    <action type="create">
        <relation role="related">
            <object type="items" />
        </relation>
    </action>
    <command name="search" nodepath="items" fields="titel" orderby="titel" age="-1">
        <prompt>zoek item</prompt>
        <search-filter>
            <name>titel bevat</name>
            <search-fields>titel</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/items/items_shop_natmm" objectnumber="new"/>
