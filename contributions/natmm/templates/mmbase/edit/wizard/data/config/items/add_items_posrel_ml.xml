<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="items"
	minoccurs="0" maxoccurs="*"
	orderby="field[@name='pos']"
	ordertype="number">
	<title>werk</title>
	<item>
		<title></title>
		<description></description>
		<!-- <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field> -->
		<field name="titel" ftype="data">
			<prompt>naam</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/items/items_ml">
			<prompt></prompt>
		</field>
	</item>
	<action type="create">
		<relation role="posrel">
			<object type="items" />
			<field name="pos">-1</field>
		</relation>
	</action>
	<command name="search" nodepath="items" fields="titel" orderby="titel" age="-1">
    	<prompt>zoek werk</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/items/items_ml" objectnumber="new"/>
</list>
