<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="artikel">
   <title>artikel</title>
   <description>
      <![CDATA[
      <h1>Artikel</h1>
      Een artikel heeft de volgende velden:
	   <ul>
		<li><b>titel:</b> de titel van het artikel (dit is een verplicht veld)</li>
		<li><b>titel zichtbaar:</b> met dit veld kunt u aangeven of de titel al dan niet getoond wordt op de website</li>
		<li><b>creatiedatum:</b> de datum dat dit artikel is aangemaakt</li>
		<li><b>datum laatste wijziging:</b> de datum waarop dit artikel voor het laatst is gewijzigd</li>
		<li><b>datum die op website te zien is:</b> wordt alleen gebruikt bij nieuws</li>
		<li><b>verschijnt op website vanaf:</b> wordt alleen gebruikt bij nieuws; het artikel verschijnt binnen maximaal een dag na de verschijningsdatum op de website</li>
		<li><b>verwijdert van website op:</b> wordt alleen gebruikt bij nieuws; het artikel wordt binnen maximaal een dag na de verwijderdatum verwijderd</li>
		<li><b>verwijderdatum gebruiken:</b> wordt alleen gebruikt bij nieuws</li>
		<li><b>intro:</b> tekst die in vet lettertype onder de titel van het artikel te zien is</li>
		<li><b>tekst:</b> tekst die in standaard lettertype onder de intro te zien is</li>
		<li><b>paragraaf:</b> mogelijkheid om meer tekst met tussenkopjes toe te voegen<br/>
		Als u meerdere paragrafen gebruikt worden deze gescheiden door een stippellijn. Bij elke paragraaf kan 1 afbeelding worden geplaatst.</li>
		</ul>
      ]]>
   </description>
   <action include="config/artikel/create_artikel.xml"/>
   <action include="config/artikel/delete_artikel.xml"/>
   <action type="load">
      <field name="titel"/>
      <field name="titel_fra"/>
      <field name="titel_eng"/>
      <field name="titel_de"/>
      <field name="intro"/>
      <field name="intro_fra"/>
      <field name="intro_eng"/>
      <field name="intro_de"/>
      <field name="tekst"/>
      <field name="tekst_fra"/>
      <field name="tekst_eng"/>
      <field name="tekst_de"/>
      <field name="titel_zichtbaar"/>
      <field name="omschrijving"/>
      <field name="bron"/>
      <field name="metatags"/>
      <field name="creatiedatum"/>
      <field name="datumlaatstewijziging"/>
      <field name="embargo"/>
      <field name="verloopdatum"/>
      <field name="use_verloopdatum"/>
      <field name="archive"/>
      <field name="reageer"/>
      <field name="status"/>
      <field name="ondertitel"/>
      <field name="begindatum"/>
      <field name="einddatum"/>
      <field name="type"/>
      <relation destination="images" role="posrel"/>
      <relation destination="paragraaf" role="posrel">
         <object>
              <relation destination="images" role="posrel">
                  <object />
              </relation>
              <relation destination="link" role="posrel">
                  <object />
              </relation>
              <relation destination="attachments" role="posrel">
                  <object />
              </relation>
              <relation destination="pagina" role="readmore">
                  <object />
              </relation>
          </object>
      </relation>
   </action>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/images_position_onecolumn.xml" />
      <optionlist include="config/option_lists/shorty_role.xml" />
   </lists>
   <steps>
      <step form-schema="edit_artikel"/>
   </steps>
   <form-schema id="edit_artikel">
      <field name="titel" ftype="line"><prompt>titel (nl)</prompt></field>
      <field name="titel_eng" ftype="line"><prompt>titel (en)</prompt></field>
      <field name="titel_fra" ftype="line"><prompt>titel (fr)</prompt></field>
      <field name="titel_de" ftype="line"><prompt>titel (de)</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
      <field name="intro" ftype="html" rows="14"><prompt>intro (nl)</prompt></field>
      <field name="intro_eng" ftype="html" rows="14"><prompt>intro (en)</prompt></field>
      <field name="intro_fra" ftype="html" rows="14"><prompt>intro (fr)</prompt></field>
      <field name="intro_de" ftype="html" rows="14"><prompt>intro (de)</prompt></field>
      <field name="tekst" ftype="html" rows="20"><prompt>tekst (nl)</prompt></field>
      <field name="tekst_eng" ftype="html" rows="20"><prompt>tekst (en)</prompt></field>
      <field name="tekst_fra" ftype="html" rows="20"><prompt>tekst (fr)</prompt></field>
      <field name="tekst_de" ftype="html" rows="20"><prompt>tekst (de)</prompt></field>
      <list include="config/images/zoek_contentelement_posrel_images.xml" />
      <field name="reageer" ftype="enum"><prompt>stippellijn tussen paragrafen</prompt><optionlist select="ja_nee"/></field>
      <list include="config/paragraaf/zoek_artikel_posrel_paragraaf_ml.xml" />
   </form-schema>
</wizard-schema>
