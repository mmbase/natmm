<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="feedback">
	<title xml:lang="nl">Feedback</title>
	<title xml:lang="en">Feedback</title>

	<task-description></task-description>
	
	<action include="config/feedback/create.xml" />
	
   <action include="config/feedback/delete.xml" />

	<action include="config/feedback/load.xml" />
   
   <lists>
		<optionlist include="config/option_lists/score.xml" /> 
	</lists>

   <steps>
		<step form-schema="edit_feedback" />
	</steps>

	<form-schema id="edit_feedback">
      <field name="namesender" dtminlength="1" /> 
      <field name="emailsender" />  
      <field name="namereceiver" />
      <!-- <field name="emailreceiver" /> -->
      <field name="topic" />
      <field name="text" ftype="html" rows="20" />
      <field name="begindate" />
      <!--  <field name="enddate" /> -->
      <field name="score" ftype="enum"><optionlist select="score"></optionlist></field>
      <list include="config/educations/add_related.xml" />
      <list include="config/evenement/zoek_related_evenement_blueprint.xml" />
   </form-schema>

</wizard-schema>
