<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="pagina"
    minoccurs="0" maxoccurs="*"
    ordertype="number" orderby="field[@name=&apos;pos&apos;]" >
    <title>verwijzing naar pagina</title>
    <item>
        <title></title>
        <description></description>
        <field fdatapath="field[@name=&apos;pos&apos;]" >
             <prompt>positie</prompt>
        </field>
        <field name="titel" ftype="data">
            <prompt>naam</prompt>
        </field>
    </item>
    <action type="create">
        <relation role="posrel">
          <object type="pagina" />
          <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='pagina']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>
    <command name="search" nodepath="pagina" fields="titel" orderby="titel" age="-1">
        <prompt>zoek pagina</prompt>
        <search-filter>
            <name>naam bevat</name>
            <search-fields>titel</search-fields>
        </search-filter>
    </command>  
</list> 

