<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="teaser" orderby="field[@name='pos']" ordertype="number" minoccurs="0" maxoccurs="20" >
   <title>in de buurt (bij maximum (=20) eerst verwijderen voordat een nieuw item kan worden toegevoegd)</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field ftype="startwizard" wizardname="config/teaser/teaser_natuurgebieden" />
   </item>
   <command name="search" nodepath="teaser" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek teaser</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/teaser/teaser_natuurgebieden" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="teaser" role="readmore">
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='teaser']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>