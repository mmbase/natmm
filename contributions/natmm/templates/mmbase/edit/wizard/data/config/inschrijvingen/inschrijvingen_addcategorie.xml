<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="inschrijvingen">
   <title>aanmelding</title>
   <action include="config/inschrijvingen/create_inschrijvingen.xml"/>
   <action include="config/inschrijvingen/delete_inschrijvingen.xml"/>
   <action type="load">
      <field name="description"/>
      <relation destination="inschrijvings_categorie" role="related" />
      <relation destination="bevestigings_teksten" role="daterel" />
   </action>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
   </lists>
   <steps>
      <step form-schema="edit_inschrijvingen"/>
   </steps>
   <form-schema id="edit_inschrijvingen">
      <field name="description" ftype="html" rows="20"><prompt>bijzonderheden</prompt></field>
      <list include="config/inschrijvings_categorie/zoek_inschrijvingen_related_inschrijvings_categorie.xml" />
      <list include="config/bevestigings_teksten/zoek_inschrijvingen_daterel_bevestigings_teksten_bu.xml" />
   </form-schema>
</wizard-schema>
