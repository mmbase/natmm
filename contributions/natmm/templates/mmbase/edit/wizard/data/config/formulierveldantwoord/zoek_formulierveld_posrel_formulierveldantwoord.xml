<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="formulierveldantwoord" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
	<title>antwoord</title>
	<item>
	   <field name="waarde" ftype="data">
         <prompt>waarde</prompt>
      </field>
      <field name="standaard" ftype="enum"> <!-- bug: this user input will not be saved -->
         <prompt>standaard</prompt>
         <optionlist select="ja_nee"></optionlist>
      </field>
		<field ftype="startwizard" wizardname="config/formulierveldantwoord/formulierveldantwoord" />
	</item>

	<command name="search" nodepath="formulierveldantwoord" age="-1" fields="waarde">
		<prompt>zoek antwoord</prompt>
      <search-filter>
         <name>waarde bevat</name>
         <search-fields>[waarde]</search-fields>
      </search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/formulierveldantwoord/formulierveldantwoord" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="formulierveldantwoord" role="posrel">
	      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='formulierveldantwoord']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

