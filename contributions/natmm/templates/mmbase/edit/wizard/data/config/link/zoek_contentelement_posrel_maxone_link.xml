<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="link" minoccurs="0" maxoccurs="1" orderby="titel" ordertype="string" hidecommand="move-up|move-down">
	<title>link (eerst verwijderen voordat een nieuwe kan worden toegevoegd)</title>
	<item>
      <!-- field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field -->
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field ftype="data" name="target"><prompt>target</prompt></field>
		<field ftype="startwizard" wizardname="config/link/link" />
	</item>
	<command name="search" nodepath="link" age="-1" fields="titel,url,target,metatags" orderby="url">
		<prompt>zoek link</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
		<search-filter>
			<name>url bevat</name>
			<search-fields>[url]</search-fields>
		</search-filter>
		<search-filter>
			<name>target bevat</name>
			<search-fields>[target]</search-fields>
		</search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/link/link" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="link" role="posrel">
	      <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='link']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

