<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="programs"
    minoccurs="0" maxoccurs="*"
    ordertype="number" orderby="field[@name=&apos;pos&apos;]" >
    <title>programma's</title>
    <item>
        <title></title>
        <description>programs</description>
        <field name="title" ftype="data">
            <prompt>titel</prompt>
        </field>
        <field name="subtitle" ftype="data">
             <prompt>subtitel</prompt>
        </field>
        <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/programs/programs">
             <prompt></prompt>
        </field>
    </item>
    <action type="create">
        <relation role="posrel">
            <object type="programs" />
             <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='programs']/field[@name='pos'])+{$pos}}</field>
            </relation>
    </action>
    <command name="search" nodepath="programs" fields="title" orderby="title" age="-1">
        <prompt>zoek programma</prompt>
        <search-filter>
            <name>titel bevat</name>
            <search-fields>title</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/programs/programs_smoelenboek" objectnumber="new"/>
</list>
