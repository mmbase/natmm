<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="educations">
	<title xml:lang="nl">Opleiding</title>
	<title xml:lang="en">Education</title>

	<task-description></task-description>

	<action include="config/educations/create.xml" />

   <action include="config/educations/delete.xml" />

	<action include="config/educations/load.xml" />

  <lists>
		<optionlist include="config/option_lists/edu_types.xml" /> 
		<optionlist include="config/option_lists/boolean_text.xml" /> 
	</lists>

	<steps>
		<step form-schema="edit_educations" />
		<step form-schema="add_related" />
    <step form-schema="feedback" />
	</steps>

	<form-schema id="edit_educations">
      <title>basisgegevens</title>
		  <field name="titel" dtminlength="1" />
      <!-- <field name="url" /> -->
      <field name="content" ftype="html" rows="16" />
      <!-- <field name="description" ftype="html" rows="16"/> -->
      <field name="targetgroup" ftype="html" rows="16" />
      <field name="goal" ftype="html" rows="16" />
      <field name="duration" />
      <field name="weight" />
      <field name="dates" ftype="html" rows="16" />
      <field name="location" />
      <field name="text" ftype="html" rows="16" />
      <field name="subscribe" ftype="html" rows="16" />
      <field name="edutype" ftype="enum"><optionlist select="edu_types"></optionlist></field>
      <!-- <field name="funding" ftype="enum"><optionlist select="boolean_text"></optionlist></field> -->
      <list include="config/providers/add_related.xml" />
      <list include="config/medewerkers/add_rolerel.xml" />
      <list include="config/attachments/add_attachments_posrel.xml" />
   </form-schema>

   <form-schema id="add_related">
      <title>indeling</title>
      <list include="config/keywords/add_related.xml" />
      <list include="config/pools/add_education_pools_posrel.xml" />
      <list include="config/competencies/add_posrel.xml" />
   </form-schema>

   <form-schema id="feedback">
      <title>feedback</title>
      <list include="config/feedback/add_related.xml" />
   </form-schema>

</wizard-schema>
