<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="attachments"  minoccurs="0" maxoccurs="*"
    orderby="field[@name='pos']" ordertype="number">
    <title>bijlagen</title>
    <description></description>
    <command name="search" nodepath="attachments" fields="title,filename" age="-1">
        <prompt>zoek bijlage</prompt>
        <search-filter>
                <name>titel bevat</name>
                <search-fields>title</search-fields>
        </search-filter>
        <search-filter>
                <name>filenaam bevat</name>
                <search-fields>filename</search-fields>
        </search-filter>     
    </command>
    <command name="startwizard" inline="true" wizardname="config/attachments/attachments" objectnumber="new"/>
    <item displaytype="file">
        <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
        <field name="titel" ftype="data"><prompt>titel</prompt></field>
        <field name="filename" ftype="data"><prompt>bestandsnaam</prompt></field>
  		  <field ftype="startwizard" wizardname="config/attachments/attachments" />
    </item>
    <action type="create">
        <relation role="posrel" destinationtype="attachments">
            <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='attachments']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>
</list>
