<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="rolerel" destination="teaser" minoccurs="0" maxoccurs="1" orderby="field[@name='pos']">
   <title>teaser voor de tickertape (voor een nieuwe tickertape, eerst verwijderen voordat een nieuw item kan worden toegevoegd)</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <!-- field fdatapath="field[@name=&apos;rol&apos;]" ftype="line"><prompt>rol</prompt></field -->
      <field ftype="startwizard" wizardname="config/teaser/teaser_nmintra" />
   </item>
   <command name="search" nodepath="teaser" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek teaser</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/teaser/teaser_nmintra" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="teaser" role="rolerel">
            <field name="rol">0</field>
            <field name="pos">{sum(//relation[@role='rolerel' and @lastitem='true' and object/@type ='teaser']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>