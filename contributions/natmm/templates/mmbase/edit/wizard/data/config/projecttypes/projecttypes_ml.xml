<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-producttype">
    <title>projecttype</title>
    <task-description>Use this wizard to edit a producttype.</task-description>
    <action include="config/projecttypes/create_projecttypes.xml" />
    <action include="config/projecttypes/delete_projecttypes.xml" />
    <action include="config/projecttypes/load_projecttypes.xml" />
    <steps>
        <step form-schema="edit_projecttypes" />
    </steps>
   <form-schema id="edit_projecttypes">
       <title></title>
       <field name="name" dtminlength="1"><prompt>naam (nl)</prompt></field>
       <field name="subtitle"><prompt>subtitel (nl)</prompt></field>
       <field name="name_eng"><prompt>naam (en)</prompt></field>
       <field name="subtitle_eng"><prompt>subtitel (en)</prompt></field>
       <field name="name_fra"><prompt>naam (fr)</prompt></field>
       <field name="subtitle_fra"><prompt>subtitel (fr)</prompt></field>
       <field name="name_de"><prompt>naam (de)</prompt></field>
       <field name="subtitle_de"><prompt>subtitel (de) ___________</prompt></field>
    </form-schema>
</wizard-schema>
