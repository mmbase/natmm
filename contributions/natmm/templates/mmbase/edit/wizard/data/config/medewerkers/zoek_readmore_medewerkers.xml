      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>voornaam bevat</name>
         <search-fields>[firstname]</search-fields>
      </search-filter>
      <search-filter>
         <name>achternaam bevat</name>
         <search-fields>[lastname]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/medewerkers/medewerkers_peopletemplate" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="medewerkers" role="readmore">
      </relation>
   </action>
</list>