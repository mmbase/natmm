<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="paragraaf" minoccurs="0" maxoccurs="*" >
   <title>in het kort</title>
   <item>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="enum"><prompt>type</prompt><optionlist select="icons" /></field>
      <field name="titel" ftype="line" ><prompt>titel (niet zichtbaar)</prompt></field>
      <!-- field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field -->
      <field name="tekst" ftype="html" rows="10"><prompt>tekst</prompt></field>
      <!-- field ftype="startwizard" wizardname="config/paragraaf/paragraaf" / -->
   </item>
   <command name="search" nodepath="paragraaf" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek paragraaf</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="insert" />
   <action type="create">
      <relation role="readmore">
         <object type="paragraaf" /> <!-- necessary for command insert -->
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='paragraaf']/field[@name='pos'])+{$pos}}</field>
      </relation>
      <field name="titel_zichtbaar">1</field>
   </action>
</list>