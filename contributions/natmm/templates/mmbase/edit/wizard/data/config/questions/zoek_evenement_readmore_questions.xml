<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="questions" minoccurs="0" maxoccurs="*" >
   <title>te reserveren middelen (bv. parkeerplaatsen)</title>
   <item>
      <field ftype="data" name="title" />
      <!-- field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field -->
      <!-- field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>readmore</prompt></field -->
      <field ftype="startwizard" wizardname="config/questions/questions" />
   </item>
   <command name="search" nodepath="questions" age="-1" fields="title" orderby="title">
      <prompt>zoek vraag</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[title]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/questions/questions" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="questions" role="readmore">
          <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='questions']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>