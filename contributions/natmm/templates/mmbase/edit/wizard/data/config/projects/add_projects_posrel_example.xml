<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="projects"
    minoccurs="0" maxoccurs="*"
    ordertype="number" orderby="field[@name=&apos;pos&apos;]">
    <title>voorbeeld projecten</title>
    <item>
        <title></title>
        <description>projects</description>
        <field name="titel" ftype="data">
            <prompt>Naam</prompt>
        </field>
        <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/projects/projects">
             <prompt></prompt>
        </field>
    </item>
    <action type="create">
        <relation role="posrel">
           <object type="projects" />
           <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='projects']/field[@name='pos'])+{$pos}}</field>
        </relation>
    </action>
    <command name="search" nodepath="projects" fields="titel" orderby="titel" age="-1">
        <prompt>zoek project</prompt>
        <search-filter>
            <name>naam bevat</name>
            <search-fields>titel</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/projects/projects" objectnumber="new"/>
</list> 

