<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="natuurgebieden" minoccurs="0" maxoccurs="1" >
   <title>natuurgebieden (eerst verwijderen voordat een nieuw item kan worden toegevoegd)</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <!-- field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field -->
      <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>linktekst</prompt></field>
      <field ftype="startwizard" wizardname="config/natuurgebieden/natuurgebieden" />
   </item>
   <command name="search" nodepath="natuurgebieden" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek natuurgebied</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
	</command>

   <!-- command name="startwizard" inline="true" wizardname="config/natuurgebieden/natuurgebieden" objectnumber="new">
       <prompt></prompt>
   </command -->
   <action type="create">
      <relation destinationtype="natuurgebieden" role="readmore">
         <field name="readmore">Lees meer ></field>
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='natuurgebieden']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>