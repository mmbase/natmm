<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="formulier">
   <title>groep van vragen</title>
   <description>
      <![CDATA[
         help
      ]]>
   </description>
   <action include="config/formulier/create_formulier.xml"/>
   <action include="config/formulier/delete_formulier.xml"/>
   <action include="config/formulier/load_formulier.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/question_type.xml" />
		<optionlist include="config/option_lists/shopitempool_types.xml" />
   </lists>
   <steps>
      <step form-schema="edit"/>
   </steps>
   <form-schema id="edit">
		<field name="titel" dtrequired="true">
			<prompt>titel</prompt>
		</field>
		<field name="omschrijving" ftype="html">
			<prompt>omschrijving</prompt>
		</field> 
		<field name="pos" ftype="line"><prompt>positie</prompt></field>
		<field name="type" ftype="enum"><prompt>vragen worden herhaald voor elke bestelde item ___________________________</prompt>
			<optionlist select="shopitempool_types"></optionlist>
	   </field>
		<list include="config/formulierveld/zoek_formulier_posrel_formulierveld_shop.xml" />
	</form-schema>
</wizard-schema>
