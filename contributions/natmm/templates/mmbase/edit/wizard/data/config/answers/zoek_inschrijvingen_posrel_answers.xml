<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="answers" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>answers</title>
   <item>
      <field ftype="data" name="answer" />
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field ftype="startwizard" wizardname="config/answers/answers" />
   </item>
   <command name="search" nodepath="answers" age="-1" fields="answer" orderby="answer">
      <prompt>zoek antwoord</prompt>
      <search-filter>
         <name>antwoord bevat</name>
         <search-fields>[answer]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/answers/answers" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="answers" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='answers']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>