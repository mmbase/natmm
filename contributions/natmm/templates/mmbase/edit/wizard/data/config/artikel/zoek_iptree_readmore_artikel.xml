<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="artikel" minoccurs="0" maxoccurs="*"
  orderby="field[@name='readmore']" ordertype="string" hidecommand="move-up|move-down">
   <title>artikel waarnaar wordt doorverwezen</title>
   <item>
		<field name="titel" ftype="line"><prompt>titel</prompt></field>
    <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="enum">
      <prompt>verwijzing voor</prompt><optionlist select="ippolygon_coordinates"></optionlist></field>
   </item>
   <command name="search" nodepath="artikel" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek artikel</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/artikel/artikel" objectnumber="new"/>
   <action type="create">
      <relation destinationtype="artikel" role="readmore">
         <field name="pos">-1</field>
      </relation>
   </action>
</list>