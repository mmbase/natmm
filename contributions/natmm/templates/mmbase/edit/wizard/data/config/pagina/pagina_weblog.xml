<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="pagina">
   <title>pagina (weblog)</title>
   <description>
      <![CDATA[
	<h1>Weblog pagina</h1>
	Deze editwizard kan worden gebruikt voor het koppelen van dossiers, panos, shorties en teasers aan de pagina.<br/>
	Als er maar 1 artikel aan deze pagina is gekoppeld, wordt deze getoond. Bij meerdere artikelen, wordt de lijst van artikelen getoond.<br/>
	<ul>
	   <li>Een dossier kan een aantal nieuwsartikelen bevatten.</li>
	   <li>Gebruik de andere editwizard om nieuwsartikelen voor deze pagina te maken en te bewerken.</li>
	   <li>De shorties kunnen in de linker- en de middenkolom worden geplaatst.</li>
	<ul>
	   ]]>
   </description>
   <action include="config/pagina/create_pagina.xml"/>
   <action include="config/pagina/delete_pagina.xml"/>
   <action type="load">
      <field name="titel"/>
      <field name="kortetitel"/>
      <field name="titel_eng"/>
      <field name="titel_de"/>
      <field name="titel_zichtbaar"/>
      <field name="omschrijving"/>
      <field name="bron"/>
      <field name="metatags"/>
      <field name="creatiedatum"/>
      <field name="datumlaatstewijziging"/>
      <field name="embargo"/>
      <field name="verloopdatum"/>
      <field name="reageer"/>
      <field name="status"/>
      <relation destination="panno" role="posrel"/>
      <relation destination="contentelement" role="contentrel"/>
      <relation destination="shorty" role="rolerel"/>
      <relation destination="teaser" role="rolerel"/>
   </action>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/pages_title.xml" />
      <optionlist include="config/option_lists/shorty_role2.xml" />
      <optionlist include="config/option_lists/teaser_size.xml" />
      <optionlist include="config/option_lists/teaser_weblog_role.xml" />
   </lists>
   <steps>
      <step form-schema="edit_pagina"/>
   </steps>
   <form-schema id="edit_pagina">
      <field name="titel" ftype="data"><prompt>titel</prompt></field>
      <field name="kortetitel" ftype="data"><prompt>korte titel</prompt></field>
      <!-- <field name="titel_zichtbaar" ftype="enum"><prompt>getoonde titel</prompt><optionlist select="pages_title"/></field> -->
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="titel_eng" ftype="line"><prompt>archief titel</prompt></field>
      <field name="titel_de" ftype="line"><prompt>archief subtitel</prompt></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>omschrijving</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
      <!-- <list include="config/artikel/zoek_weblog_contentrel_artikel.xml" /> note: remove origin from article if you want to use this -->
      <list include="config/panno/zoek_pagina_posrel_panno.xml" />
      <list include="config/shorty/zoek_pagina_rolerel_shorty.xml" />
      <list include="config/teaser/zoek_pagina_index_rolerel_teaser.xml" />
   </form-schema> 
</wizard-schema>
