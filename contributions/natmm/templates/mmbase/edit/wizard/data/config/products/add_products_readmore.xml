<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="products"
    minoccurs="0" maxoccurs="*"
    ordertype="string" orderby="titel" hidecommand="move-up|move-down">
    <title>product en specificatie</title>
    <item>
        <title></title>
        <field name="titel" ftype="data">
            <prompt>naam</prompt>
        </field>
        <field fdatapath="field[@name=&apos;readmore&apos;]" >
              <prompt>specificatie</prompt>
        </field>
        <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/products/products">
            <prompt></prompt>
        </field>
     </item>
    <action type="create">
        <relation role="readmore">
            <object type="products" />
        </relation>
    </action>
    <command name="search" nodepath="products" fields="titel" orderby="titel" age="-1">
        <prompt>zoek product</prompt>
        <search-filter>
            <name>naam bevat</name>
            <search-fields>titel</search-fields>
        </search-filter>
    </command>
    <command name="startwizard" inline="true" wizardname="config/products/products" objectnumber="new"/>
</list>
