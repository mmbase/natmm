<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="pagina">
   <title>pagina (portaal)</title>
   <description>
      <![CDATA[
   <h1>Portaal pagina</h1>
   Deze editwizard kan worden gebruikt voor het koppelen van dossier, panos, shorties en teasers aan de pagina.<br/>
   <ul>
      <li>De dossiers kunnen zowel nieuwsartikelen als activiteiten bevatten.</li>
      <li>De shorties kunnen in de linker- en de rechterkolom worden geplaatst.</li>
   <ul>
      ]]>
   </description>
   <action include="config/pagina/create_pagina.xml"/>
   <action include="config/pagina/delete_pagina.xml"/>
   <action include="config/pagina/load_pagina.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/pages_title.xml" />
      <optionlist include="config/option_lists/shorty_role2.xml" />
      <optionlist include="config/option_lists/teaser_role.xml" />
      <optionlist include="config/option_lists/teaser_size.xml" />
   </lists>
   <steps>
      <step form-schema="left_column"/>
      <step form-schema="middle_column"/>
      <step form-schema="right_column"/>
   </steps>
   <form-schema id="left_column">
      <title>linker kolom</title>
      <field name="titel" ftype="data"><prompt>titel</prompt></field>
      <field name="kortetitel" ftype="data"><prompt>korte titel</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>getoonde titel</prompt><optionlist select="pages_title"/></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>omschrijving</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
      
      <list include="config/teaser/zoek_pagina_index_rolerel_teaser.xml" />
      <list include="config/shorty/zoek_pagina_rolerel_shorty_portal.xml" />
   </form-schema>
   <form-schema id="middle_column">
      <title>midden kolom</title>
      <field name="titel" ftype="data"><prompt>titel</prompt></field>

      <list include="config/dossier/zoek_pagina_posrel_dossier_portal.xml" />
      <list include="config/poll/zoek_contentelement_contentrel_poll.xml" />      
   </form-schema>
   <form-schema id="right_column">
      <title>rechter kolom</title>
      <field name="titel" ftype="data"><prompt>titel</prompt></field>
      <list include="config/link/zoek_portal_contentrel_link.xml" />
      <list include="config/linklijst/zoek_pagina_posrel_linklijst.xml" />
   </form-schema>
</wizard-schema>
