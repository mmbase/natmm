<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="shorty" orderby="field[@name='rol']" ordertype="number" minoccurs="0" maxoccurs="20" hidecommand="move-up|move-down">
   <title>shorty in de rechterkolom (bij maximum (=20) eerst verwijderen voordat een nieuw item kan worden toegevoegd)</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field ftype="startwizard" wizardname="config/shorty/shorty" />
   </item>
   <command name="search" nodepath="shorty" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek shorty</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/shorty/shorty" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="shorty" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='shorty']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>