<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="formulier" minoccurs="0" maxoccurs="*" >
	<title>formulier</title>
	<item>
	      <field ftype="data" name="titel"><prompt>titel</prompt></field>
			<field ftype="startwizard" wizardname="config/formulier/formulier" />
	</item>
   <command name="search" nodepath="formulier" age="-1" fields="titel,emailadressen" orderby="titel">
      <prompt>zoek formulier</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>emailadressen bevat</name>
         <search-fields>[emailadressen]</search-fields>
      </search-filter>
   </command>
	<command name="startwizard" inline="true" wizardname="config/formulier/formulier" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="formulier" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='formulier']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
</list>

