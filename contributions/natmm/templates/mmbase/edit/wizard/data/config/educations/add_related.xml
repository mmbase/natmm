<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="educations" minoccurs="0" maxoccurs="*"
   orderby="titel" ordertype="string" hidecommand="move-up|move-down">
	<title>opleiding</title>
	<item>
		<title>opleiding</title>
		<description></description>
		<field name="titel" ftype="data">
			<prompt>naam</prompt>
		</field>
      <field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/educations/wizard">
			<prompt></prompt>
		</field>
	 </item>
	<action type="create">
		<relation role="related">
			<object type="educations" />
		</relation>
	</action>
	<command name="search" nodepath="educations" fields="titel,description" orderby="titel" age="-1">
    	<prompt>zoek opleiding</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
		<search-filter>
			<name>omschrijving bevat</name>
			<search-fields>description</search-fields>
		</search-filter>
	</command>
</list>
