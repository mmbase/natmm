<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="related" destination="attachments" minoccurs="0" maxoccurs="*" orderby="titel" ordertype="string" hidecommand="move-up|move-down">
	<title>bijlagen (gesorteerd op titel)</title>
	<item>
		 <field name="titel" ftype="data"><prompt>titel</prompt></field>
	    <field name="filename" ftype="data"><prompt>filenaam</prompt></field>
		 <field ftype="startwizard" wizardname="config/attachments/attachments" />
	</item>
	<command name="search" nodepath="attachments" age="-1" fields="titel,metatags" orderby="titel">
		<prompt>zoek bijlage</prompt>
		<search-filter>
			<name>titel bevat</name>
			<search-fields>[titel]</search-fields>
		</search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/attachments/attachments" objectnumber="new">
		<prompt></prompt>
	</command>
	<action type="create">
		<relation destinationtype="attachments" role="related">
    </relation>
	</action>
</list>

