<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="formulier">

   <title>Formulier</title>

   <description>
      <![CDATA[
         help
      ]]>
   </description>

   <action include="config/formulier/create_formulier.xml"/>
   <action include="config/formulier/delete_formulier.xml"/>
   <action include="config/formulier/load_formulier.xml"/>

   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/question_type.xml" />
  </lists>

   <steps>
      <step form-schema="edit"/>
   </steps>

   <form-schema id="edit">
     <field name="titel" dtrequired="true">
        <prompt>titel</prompt>
     </field>
     <field name="omschrijving" ftype="html" rows="14">
        <prompt>omschrijving</prompt>
     </field> 
     <field name="emailadressen" dtrequired="true">
        <prompt>emailadressen</prompt>
     </field>
     <field name="emailonderwerp">
        <prompt>tekst voor verzend button</prompt>
     </field>
     <field name="titel_fra">
        <prompt>titel voor bevestings email</prompt>
     </field> 
     <field name="titel_de">
        <prompt>vragen die in het onderwerp van de email worden opgenomen (posities van de vragen gescheiden door een puntkomma) __________________________</prompt>
     </field> 
     <list include="config/formulierveld/zoek_formulier_posrel_formulierveld.xml" />
  </form-schema>
</wizard-schema>
