<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="artikel" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>artikel</title>
   <item>
    <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
		<field name="titel" ftype="line"><prompt>titel</prompt></field>
		<field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
		<field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
		<field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
		<field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
		<field name="intro" ftype="html" rows="14"><prompt>tekst</prompt></field>
		<list include="config/images/zoek_contentelement_posrel_images.xml" />
		<list include="config/paragraaf/zoek_artikel_posrel_paragraaf.xml" />
   </item>
   <command name="search" nodepath="artikel" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek artikel</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/artikel/artikel_no_embargo" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="artikel" role="contentrel">
         <field name="pos">{sum(//relation[@role='contentrel' and @lastitem='true' and object/@type ='artikel']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>