<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="evenement_blueprint" minoccurs="0" maxoccurs="*" orderby="titel" ordertype="string">
   <title>activiteit</title>
   <item>
      <!-- field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field -->
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
   </item>
   <command name="search" nodepath="evenement_blueprint" age="-1" fields="titel,metatags"  constraints="soort='parent'" orderby="titel">
      <prompt>zoek activiteit</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="evenement_blueprint" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='evenement_blueprint']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>