<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="pagina" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']"  ordertype="number">
	<title>paginas waarnaar wordt doorverwezen</title>
	<item>
		<title></title>
		<description>pagina</description>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>inleidend tekst</prompt></field>
		<field name="titel" ftype="data"><prompt>naam</prompt></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>omschrijving</prompt></field>
  </item>
	<action type="create">
		<relation role="readmore">
			<object type="pagina" />
			 <field name="readmore">Lees verder op pagina</field>
       <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='pagina']/field[@name='pos'])+{$pos}}</field>
      </relation>
	</action>
	<command name="search" nodepath="pagina" fields="titel,metatags" orderby="titel" age="-1">
    <prompt>zoek pagina</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
    <search-filter>
			<name>redactionele aantekening bevat</name>
			<search-fields>metatags</search-fields>
		</search-filter>
	</command>
</list>
