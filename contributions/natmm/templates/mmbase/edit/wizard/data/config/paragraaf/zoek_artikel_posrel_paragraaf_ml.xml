<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="paragraaf" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']"  ordertype="number">
   <title>paragraaf</title>
   <item>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field name="titel" ftype="line" ><prompt>paragraaf titel (nl)</prompt></field>
      <field name="titel_eng" ftype="line" ><prompt>paragraaf titel (en)</prompt></field>
      <field name="titel_fra" ftype="line" ><prompt>paragraaf titel (fr)</prompt></field>
      <field name="titel_de" ftype="line" ><prompt>paragraaf titel (de)</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>paragraaf tekst (nl)</prompt></field>
      <field name="omschrijving_eng" ftype="html" rows="20"><prompt>paragraaf tekst (en)</prompt></field>
      <field name="omschrijving_fra" ftype="html" rows="20"><prompt>paragraaf tekst (fr)</prompt></field>
      <field name="omschrijving_de" ftype="html" rows="20"><prompt>paragraaf tekst (de)</prompt></field>
      <list include="config/images/zoek_contentelement_posrel_images.xml" />
      <list include="config/attachments/add_attachments_posrel.xml" />
      <list include="config/link/zoek_contentelement_posrel_link.xml" />
   </item>
   <command name="search" nodepath="paragraaf" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek paragraaf</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="insert" />
   <action type="create">
      <relation role="posrel">
         <object type="paragraaf" /> <!-- necessary for command insert -->
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='paragraaf']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>