   </steps>

   <form-schema id="edit" extends="config/rubriek/edit.xml"/>
   <form-schema id="edit_frans" extends="config/rubriek/edit_frans.xml"/>
   <form-schema id="edit_english" extends="config/rubriek/edit_english.xml"/>
