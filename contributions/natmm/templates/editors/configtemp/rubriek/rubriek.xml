<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="rubriek">

   <title>Rubriek</title>

   <description>
      <![CDATA[
         help
      ]]>
   </description>

   <action include="config/rubriek/create_rubriek.xml"/>
   <action include="config/rubriek/delete_rubriek.xml"/>
   <action include="config/rubriek/load_rubriek.xml"/>

   <lists>
      <optionlist include="config/optionLists/boolean.xml" />
   </lists>

   <steps>
      <step form-schema="edit"/>
