<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE functionset PUBLIC "//MMBase - functionset //" "http://www.mmbase.org/dtd/functionset_1_0.dtd">
<functionset>
<status>active</status>
<version>4</version>
<description>functions for the thememanager</description>

	<function name="getStyleSheet">
		<description>get the stylesheet link</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getStyleSheet</method>
		<param name="context" type="String" description="the context where to find the stylesheet" />
		<param name="themeid" type="String" description="the id of the theme" />
		<return type="String"> 
		</return> 
	</function>

	<function name="getAssignedList">
		<description>get the assigned id's</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getAssignedList</method>
		<return type="NodeList"> 
		</return> 
	</function>


	<function name="getThemesList">
		<description>get the themes</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemesList</method>
		<return type="NodeList"> 
		</return> 
	</function>

	<function name="getAssignInfo">
		<description>Provide the info on a assign</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getAssignInfo</method>
		<param name="id" type="String" description="the id of assign" />
		<return type="Node"> 
		</return> 
	</function>


	<function name="getThemeInfo">
		<description>Provide the info on a theme</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemeInfo</method>
		<param name="id" type="String" description="the id of theme" />
		<return type="Node"> 
		</return> 
	</function>


	<function name="getThemeStyleSheets">
		<description>Provide the info on a theme</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemeStyleSheetsList</method>
		<param name="id" type="String" description="the id of theme" />
		<return type="NodeList"> 
		</return> 
	</function>


	<function name="getThemeImageSets">
		<description>Provide the info on a theme</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemeImageSetsList</method>
		<param name="id" type="String" description="the id of theme" />
		<param name="role" type="String" description="role of the imageset" />
		<return type="NodeList"> 
		</return> 
	</function>


	<function name="getThemeImage">
		<description>Provide the real image url</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemeImage</method>
		<param name="imagecontext" type="String" description="the context where to find the image" />
		<param name="themeid" type="String" description="the id of theme" />
		<param name="imageid" type="String" description="the id of the image" />
		<return type="String"> 
		</return> 
	</function>

	<function name="getThemeImages">
		<description>Provide a list of real image urls</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>getThemeImages</method>
		<param name="imagecontext" type="String" description="the context where to find the images" />
		<param name="themeid" type="String" description="the id of theme" />
		<param name="imagesetid" type="String" description="the id of the imageset" />
		<return type="NodeList"> 
		</return> 
	</function>

	<function name="changeAssign">
		<description>Change the theme for a assign</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>changeAssign</method>
		<param name="id" type="String" description="the id of assign" />
		<param name="newtheme" type="String" description="the new theme" />
		<return type="Boolean"> 
		</return> 
	</function>


	<function name="removeAssign">
		<description>remove a assign</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>removeAssign</method>
		<param name="removeid" type="String" description="the id of assign" />
		<return type="Boolean"> 
		</return> 
	</function>


	<function name="addAssign">
		<description>add the theme for a assign</description>
		<type>class</type>
		<class>org.mmbase.applications.thememanager.taglib.ThemeManagerController</class>
		<method>addAssign</method>
		<param name="newid" type="String" description="the newid of assign" />
		<param name="newtheme" type="String" description="the new theme" />
		<return type="Boolean"> 
		</return> 
	</function>

</functionset>
