<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase//DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object" maintainer="mmbase.org" name="groups" version="0">
  <!-- Builder configuration for groups -->
  <!-- Status of the builder: active or inactive -->
  <status>active</status>
  <classfile>Dummy</classfile>
  <searchage>9999</searchage>
  <names>
    <!-- singular names per language as defined by ISO 639 -->
    <singular xml:lang="nl">Groep</singular>
    <singular xml:lang="en">Group</singular>
    <!-- plural names per language as defined by ISO 639 -->
    <plural xml:lang="nl">Groepen</plural>
    <plural xml:lang="en">Groups</plural>
  </names>
  <descriptions>
    <description xml:lang="nl">verschillende groepen van mensen</description>
    <description xml:lang="en">different types of groups of people</description>
  </descriptions>
  <!-- decsription per language as defined by ISO 639 -->
  <properties>
    <property name="max-nodes-from-query">1000</property>
  </properties>
  <fieldlist>
    <!-- field definition for field 4 : name -->
    <field>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Naam</guiname>
        <guiname xml:lang="en">Name</guiname>
        <guitype>string</guitype>
      </gui>
      <!-- editor related -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>1</input>
          <!-- position in the list area of the editor -->
          <list>1</list>
          <!-- position in the search area of the editor -->
          <search>1</search>
        </positions>
      </editor>
      <!-- database related -->
      <db>
        <!-- name of the field in the database -->
        <name xml:lang="en">name</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="false" size="50" state="persistent">STRING</type>
      </db>
    </field>
    <!-- field definition for field 5 : description -->
    <field>
      <!-- gui related -->
      <gui>
        <guiname xml:lang="nl">Omschrijving</guiname>
        <guiname xml:lang="en">Description</guiname>
        <guitype>field</guitype>
      </gui>
      <!-- editor related -->
      <editor>
        <positions>
          <!-- position in the input area of the editor -->
          <input>2</input>
          <!-- position in the list area of the editor -->
          <list>-1</list>
          <!-- position in the search area of the editor -->
          <search>2</search>
        </positions>
      </editor>
      <!-- database related -->
      <db>
        <!-- name of the field in the database -->
        <name xml:lang="en">description</name>
        <!-- MMBase datatype and demands on it -->
        <type key="false" notnull="false" size="2048" state="persistent">STRING</type>
      </db>
    </field>
	<!-- POS 8 : <field> 'externid'  -->
	<field>
		<!-- gui related -->
		<gui>
			<guiname xml:lang="us">External ID</guiname>
			<guiname xml:lang="nl">Externe ID</guiname>
			<guitype>string</guitype>
		</gui>
		<!-- editor related  -->
		<editor>
			<positions>
				<!-- position in the input area of the editor -->
				<input>8</input>
				<!-- position in list area of the editor -->
				<list>-1</list>
				<!-- position in search area of the editor -->
				<search>8</search>
			</positions>
		</editor>
		<!-- database related  -->
		<db>
			<!-- name of the field in the database -->
			<name>externid</name>
			<!-- MMBase datatype and demands on it -->
			<type state="persistent" size="32" notnull="false" key="true">STRING</type>
		</db>
	</field>
  </fieldlist>
</builder>