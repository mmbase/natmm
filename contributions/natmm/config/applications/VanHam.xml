<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE application PUBLIC "-//MMBase//DTD application config 1.1//EN" "http://www.mmbase.org/dtd/application_1_1.dtd">
<application name="VanHam" maintainer="mmbase.org" version="1" auto-deploy="false">
   <requirements>
   	<requires type="application" name="LeoCMS" maintainer="mmbase.org" version="1" />
   </requirements> 
   <neededbuilderlist>
        <!-- LeoCMS relations -->
        <builder version="0" maintainer="mmbase.org">childrel</builder>
        <builder version="0" maintainer="mmbase.org">contentrel</builder>
        <builder version="0" maintainer="mmbase.org">insrel</builder>
        <builder version="0" maintainer="mmbase.org">posrel</builder>
        <builder version="0" maintainer="mmbase.org">readmore</builder>
        
        <!-- LeoCMS objects -->
        <builder version="0" maintainer="mmbase.org">artikel</builder>
        <builder version="0" maintainer="mmbase.org">attachments</builder>
        <builder version="0" maintainer="mmbase.org">contentelement</builder>
        <builder version="0" maintainer="mmbase.org">editwizards</builder>
        <builder version="0" maintainer="mmbase.org">images</builder>
        <builder version="0" maintainer="mmbase.org">menu</builder>
        <builder version="0" maintainer="mmbase.org">link</builder>
        <builder version="0" maintainer="mmbase.org">pagina</builder>
        <builder version="0" maintainer="mmbase.org">paginatemplate</builder>
        <builder version="0" maintainer="mmbase.org">rubriek</builder>
        <builder version="0" maintainer="mmbase.org">template</builder>
        <builder version="0" maintainer="mmbase.org">users</builder>

        <!-- NatMM objects -->
        <builder version="0" maintainer="mmbase.org">email</builder>
        <builder version="0" maintainer="mmbase.org">jumpers</builder>
        <builder version="0" maintainer="mmbase.org">organisatie</builder>
        <builder version="0" maintainer="mmbase.org">persoon</builder>
        <builder version="0" maintainer="mmbase.org">paragraaf</builder>
		  
        <!-- NMIntra objects -->
        <builder version="0" maintainer="mmbase.org">items</builder>
        <builder version="0" maintainer="mmbase.org">item_pools</builder>
        <builder version="0" maintainer="mmbase.org">organisatie_type</builder>
        <builder version="0" maintainer="mmbase.org">pools</builder>
        <builder version="0" maintainer="mmbase.org">projects</builder>
        <builder version="0" maintainer="mmbase.org">projecttypes</builder>
    </neededbuilderlist>
    <neededreldeflist>
        <reldef source="parent" target="parent" direction="bidirectional" guisourcename="ParentRel" guitargetname="ParentRel" builder="childrel" />
        <reldef source="contentrel" target="contentrel" direction="bidirectional" guisourcename="ContentRel" guitargetname="ContentRel" builder="contentrel" />
        <reldef source="gebruikt" target="gebruikt" direction="bidirectional" guisourcename="Gebruikt" guitargetname="Gebruikt" builder="insrel" />
        <reldef source="posrel" target="posrel" direction="bidirectional" guisourcename="Posrel" guitargetname="Posrel" builder="posrel" />
        <reldef source="readmore" target="readmore" direction="bidirectional" guisourcename="ReadMore" guitargetname="ReadMore" builder="readmore" />
        <reldef source="related" target="related" direction="bidirectional" guisourcename="Related" guitargetname="Related" builder="insrel" />
   </neededreldeflist>
   <allowedrelationlist>
        <relation from="artikel" to="paragraaf" type="posrel" />
        <relation from="contentelement" to="attachments" type="posrel" />
        <relation from="contentelement" to="images" type="posrel" />
        <relation from="contentelement" to="link" type="posrel" />
		  
        <relation from="organisatie" to="organisatie_type" type="posrel"/>
        <relation from="pagina" to="contentelement" type="contentrel" />
		  <relation from="projects" to="organisatie" type="readmore"/>
		  <relation from="projects" to="projecttypes" type="posrel"/>
		  <relation from="items" to="artikel" type="posrel"/>
        <relation from="items" to="persoon" type="posrel"/>
        <relation from="items" to="item_pools" type="posrel"/>
   </allowedrelationlist>
   <datasourcelist>
        <!-- LeoCMS objects -->
        <datasource builder="artikel" path="VanHam/artikel.xml"/>
        <datasource builder="attachments" path="VanHam/attachments.xml"/>
        <datasource builder="contentelement" path="VanHam/contentelement.xml" />
        <datasource builder="editwizards" path="VanHam/editwizards.xml"/>
        <datasource builder="images" path="VanHam/images.xml"/>
        <datasource builder="menu" path="VanHam/menu.xml"/>
        <datasource builder="pagina" path="VanHam/pagina.xml"/>
        <datasource builder="paginatemplate" path="VanHam/paginatemplate.xml"/>
        <datasource builder="rubriek" path="VanHam/rubriek.xml"/>
        <datasource builder="template" path="VanHam/template.xml"/>
        <datasource builder="users" path="VanHam/users.xml" />
        
         <!-- NatMM objects -->
        <datasource builder="email" path="VanHam/email.xml"/>
        <datasource builder="jumpers" path="VanHam/jumpers.xml" />
        <datasource builder="organisatie" path="VanHam/organisatie.xml" />
		  <datasource builder="persoon" path="VanHam/persoon.xml"/>
		  <datasource builder="paragraaf" path="VanHam/paragraaf.xml" />
		  
		  <!-- NMIntra objects -->
        <datasource builder="items" path="VanHam/items.xml"/>
        <datasource builder="item_pools" path="VanHam/item_pools.xml"/>
		  <datasource builder="organisatie_type" path="VanHam/organisatie_type.xml" />
        <datasource builder="pools" path="VanHam/pools.xml"/>
        <datasource builder="projects" path="VanHam/projects.xml"/>
        <datasource builder="projecttypes" path="VanHam/projecttypes.xml"/>
    </datasourcelist>

   <relationsourcelist>
      <!-- LeoCMS relations -->
      <relationsource builder="childrel" path="VanHam/childrel.xml"/>
      <relationsource builder="contentrel" path="VanHam/contentrel.xml"/>
      <relationsource builder="insrel" path="VanHam/insrel.xml"/>
      <relationsource builder="posrel" path="VanHam/posrel.xml"/>
      <relationsource builder="readmore" path="VanHam/readmore.xml"/>
   </relationsourcelist>

   <contextsourcelist>
      <contextsource goal="backup" type="depth" path="VanHam/backup.xml"/>
   </contextsourcelist>

   <description><![CDATA[Installs the application. Included are all the builders.]]></description>
   <install-notice><![CDATA[You have installed the application.]]></install-notice>
</application>