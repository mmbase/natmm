<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-producttype">
    <title>productgroep</title>
    <task-description>Use this wizard to edit a producttype.</task-description>
    <action include="config/producttypes/create_producttypes.xml" />
    <action include="config/producttypes/delete_producttypes.xml" />
    <action include="config/producttypes/load_producttypes.xml" />
    <steps>
        <step form-schema="edit_producttypes" />
    </steps>
    <form-schema id="edit_producttypes">
       <title></title>
       <field name="title" dtminlength="1" dtmaxlength="100">
           <prompt>naam</prompt>
       </field>
       <field name="description" dtmaxlength="1024" rows="4">
           <prompt>korte omschrijving - optioneel</prompt>
       </field>
       <list include="config/products/add_products_posrel_nopos.xml" />
    </form-schema>
</wizard-schema>
