<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-programs">
    <title>programma</title>
    <task-description>Use this wizard to edit a program.</task-description>
    <action include="config/programs/create_programs.xml" />
    <action include="config/programs/delete_programs.xml" />
    <action include="config/programs/load_programs.xml" />
    <steps>
        <step form-schema="edit_programs" />
        <step form-schema="add_info" />
    </steps>
    <form-schema id="edit_programs" extends="config/programs/edit_programs.xml" />
    <form-schema id="add_info">
        <title>items en medewerkers</title>
        <field name="title" ftype="data" ><prompt>titel van dit programma</prompt></field>
        <list include="config/items/add_items_posrel.xml" />
        <list include="config/medewerkers/zoek_items_posrel_medewerkers.xml" />
    </form-schema>
</wizard-schema>
