<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="paragraaf"
     minoccurs="0" maxoccurs="*"
     orderby="field[@name='pos']"
     ordertype="number">
   <title>paragrafen</title>
   <item>
      <description>paragrafen</description>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field name="titel" ftype="line" ><prompt>paragraaf titel</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="tekst" ftype="html" rows="24"><prompt>paragraaf tekst</prompt></field>
      <list include="config/images/zoek_contentelement_posrel_images.xml" />
      <list include="config/attachments/add_attachments_posrel.xml" />
      <list include="config/link/zoek_contentelement_posrel_link.xml" />
   </item>
   <command name="insert"/>
   <action type="create">
      <relation destinationtype="paragraaf" role="readmore">
         <object type="paragraaf" /> <!-- necessary for command insert -->
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='paragraaf']/field[@name='pos'])+{$pos}}</field>
      </relation>
      <field name="titel_zichtbaar">1</field>
   </action>
</list>     
