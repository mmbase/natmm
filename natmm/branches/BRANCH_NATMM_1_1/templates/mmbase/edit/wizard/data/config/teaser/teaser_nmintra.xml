<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="teaser">
   <title>teaser</title>
   <description>
      <![CDATA[
	<h1>Teasers</h1>
	Teasers die voor iedere pagina onder een rubriek moeten gelden, kunnen aan de rubriek gekoppeld worden.<br/>
	   ]]>
   </description>
   <action include="config/teaser/create_teaser.xml"/>
   <action include="config/teaser/delete_teaser.xml"/>
   <action include="config/teaser/load_teaser.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/teaser_size.xml" />
   </lists>
   <steps>
      <step form-schema="edit_teaser"/>
   </steps>
   <form-schema id="edit_teaser">
      <field name="titel" ftype="line"><prompt>titel</prompt></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>         
      <list include="config/pagina/zoek_shorty_readmore_pagina.xml" />
      <list include="config/link/zoek_shorty_readmore_link.xml" />
      <list include="config/pools/add_pools_posrel.xml" />   
   </form-schema>
</wizard-schema>
