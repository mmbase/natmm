<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="dossier" minoccurs="0" maxoccurs="1" >
   <title>dossier (eerst verwijderen voordat een nieuw item kan worden toegevoegd)</title>
   <item>
      <field ftype="data" name="naam"><prompt>naam</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>linktekst</prompt></field>
      <field ftype="startwizard" wizardname="config/dossier/dossier" />
   </item>
   <command name="search" nodepath="dossier" age="-1" fields="naam" orderby="naam">
      <prompt>zoek dossier</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[naam]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/dossier/dossier" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="dossier" role="readmore">
         <field name="readmore">Lees meer ></field>
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='dossier']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>