<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="medewerkers" minoccurs="0" maxoccurs="*" >
   <title>eigenaar</title>
   <item>
      <field ftype="data" name="titel"><prompt>naam</prompt></field>
   </item>
   <command name="search" nodepath="medewerkers" age="-1" fields="titel,firstname,lastname,metatags" orderby="lastname">
      <prompt>zoek medewerker</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>voornaam bevat</name>
         <search-fields>[firstname]</search-fields>
      </search-filter>
      <search-filter>
         <name>achternaam bevat</name>
         <search-fields>[lastname]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="medewerkers" role="posrel">
      </relation>
   </action>
</list>