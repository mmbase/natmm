<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="images"
		minoccurs="0" maxoccurs="1"
		orderby="field[@name='pos']"
		ordertype="number">
	<title xml:lang="nl">afbeelding</title>
	<title xml:lang="en">image</title>
	<item displaymode="section" displaytype="image">
		<title></title>
		<description></description>
		<field name="title" ftype="data">
			<prompt xml:lang="nl">naam</prompt>
			<prompt xml:lang="en">title</prompt>
		</field>
    <field name="screensize" ftype="enum">
			<prompt xml:lang="nl">schalen op pagina grootte</prompt>
			<prompt xml:lang="en">resize to page size</prompt>
      <optionlist select="ja_nee"/>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/images/images">
			<prompt></prompt>
		</field>		
		<list include="config/artikel/add_artikel_pos4rel.xml" />
		<list include="config/pagina/add_pagina_pos4rel.xml" />
	</item>
	<command name="search" nodepath="images" fields="title" orderby="title" age="-1">
		<prompt>zoek afbeelding</prompt>
		<search-filter>
			<name xml:lang="nl">naam bevat</name>
			<name xml:lang="en">title contains</name>
			<search-fields>title</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/images/images" objectnumber="new"/>
	<action type="create">
		<relation role="posrel">
			<object type="images" />
			<field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='images']/field[@name='pos'])+{$pos}}</field>
		</relation>
	</action>
</list>