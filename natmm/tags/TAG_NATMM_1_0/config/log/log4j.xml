<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" [
    <!ENTITY mmlevel "org.mmbase.util.logging.log4j.Log4jPriority" >
    <!ENTITY logdir  "C:/data/natmm/logs/" >
    <!-- <!ENTITY logdir  "E:/Intranet_Logs/" > -->
]>

<log4j:configuration>

    <appender name="logfile" class="org.apache.log4j.FileAppender" >
        <param name="File"   value="&logdir;mmbase.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d %-5p %c{4}  - %m%n" />
        </layout>
    </appender>

    <logger name="org.mmbase.security" >
        <level class="&mmlevel;" value="error" />
    </logger>

    <logger name="org.mmbase.util.XMLErrorHandler" >
       <level class="&mmlevel;" value="error" />
    </logger>

    <logger name="mmbase.applications.editwizard.Utils" >
       <level class="&mmlevel;" value="error" />
    </logger>

    <logger name="STDERR">
       <level class="&mmlevel;" value="error" />   
    </logger>

    <logger name="org.mmbase.PAGE.LOGTAG" >
        <level class="&mmlevel;" value="service" />
    </logger>

    <root>
        <level class="&mmlevel;" value="info" />
        <appender-ref ref="logfile" />
    </root>

</log4j:configuration>
