<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="phaserel" destination="phases"
    minoccurs="0" maxoccurs="*"
    orderby="field[@name='begindate']"
    ordertype="number"
    hidecommand="move-up|move-down">
    <title>fasen (sluit deze editwizard af om de fasen te bewerken)</title>
    <item>
        <title></title>
        <field name="name" ftype="data">
            <prompt>naam</prompt>
        </field>
        <field fdatapath="field[@name=&apos;begindate&apos;]" ftype="date"><prompt>Aanvangsdatum</prompt></field>
        <field fdatapath="field[@name=&apos;enddate&apos;]" ftype="date"><prompt>Einddatum</prompt></field>
    </item>
    <action type="create">
        <relation role="phaserel">
            <object type="phases" />
        </relation>
    </action>    
    <command name="search" nodepath="phases" fields="name" orderby="name" age="-1">
        <prompt>zoek fasen</prompt>
        <search-filter>
            <name>naam bevat</name>
            <search-fields>name</search-fields>
        </search-filter>
    </command>  
</list> 

