<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="extra_info" minoccurs="0" maxoccurs="*" >
   <title>extra informatie</title>
   <item>
      <field ftype="data" name="omschrijving" />
      <!-- field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field -->
      <!-- field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>readmore</prompt></field -->
   </item>
   <command name="search" nodepath="extra_info" age="-1" fields="omschrijving" orderby="omschrijving">
      <prompt>zoek extra info</prompt>
      <search-filter>
         <name>omschrijving bevat</name>
         <search-fields>[omschrijving]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="extra_info" role="readmore">
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='extra_info']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>