<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE builder PUBLIC "-//MMBase/DTD builder config 1.1//EN" "http://www.mmbase.org/dtd/builder_1_1.dtd">
<builder extends="object" maintainer="leeuwnet" name="properties" version="0">

   <status>active</status>
   <searchage>9999</searchage>

   <names>
      <singular xml:lang="en">Property</singular>
      <singular xml:lang="nl">Eigenschap</singular>
      <plural xml:lang="en">Properties</plural>
      <plural xml:lang="nl">Eigenschappen</plural>
   </names>

   <descriptions>
      <description xml:lang="nl">Eigenschappen</description>
   </descriptions>

   <properties>
      <property name="publish">true</property>
   </properties>

   <fieldlist>
      <!-- Field 4: key -->
      <field>
         <!-- Descriptions.
               They are useful for GUI editors to provide helptexts.
               Descriptions can be provided in various languages. -->
         <descriptions>
            <!-- description per language as defined by ISO 639 -->
            <description xml:lang="nl">Sleutel</description>
         </descriptions>
         <!-- gui related -->
         <gui>
            <guiname xml:lang="nl">Sleutel</guiname>
            <guiname xml:lang="en">Key</guiname>
            <guitype>string</guitype>
         </gui>
         <!-- editor related -->
         <editor>
            <positions>
               <!-- position in the input area of the editor -->
               <input>1</input>
               <!-- position in the list area of the editor -->
               <list>1</list>
               <!-- position in the search area of the editor -->
               <search>1</search>
            </positions>
         </editor>
         <!-- database related -->
         <db>
            <!-- name of the field in the database -->
            <name xml:lang="nl">key</name>
            <!-- MMBase datatype and demands on it -->
            <type key="false" notnull="true" size="255" state="persistent">STRING</type>
         </db>
      </field>
      
      <!-- Field 5: value -->
      <field>
         <!-- Descriptions.
               They are useful for GUI editors to provide helptexts.
               Descriptions can be provided in various languages. -->
         <descriptions>
            <!-- description per language as defined by ISO 639 -->
            <description xml:lang="nl">Waarde</description>
         </descriptions>
         <!-- gui related -->
         <gui>
            <guiname xml:lang="nl">Waarde</guiname>
            <guiname xml:lang="en">Value</guiname>
            <guitype>string</guitype>
         </gui>
         <!-- editor related -->
         <editor>
            <positions>
               <!-- position in the input area of the editor -->
               <input>2</input>
               <!-- position in the list area of the editor -->
               <list>2</list>
               <!-- position in the search area of the editor -->
               <search>2</search>
            </positions>
         </editor>
         <!-- database related -->
         <db>
            <!-- name of the field in the database -->
            <name xml:lang="nl">value</name>
            <!-- MMBase datatype and demands on it -->
            <type key="false" notnull="true" size="64000" state="persistent">STRING</type>
         </db>
      </field>
      
      <!-- Field 6: description -->
      <field>
         <!-- Descriptions.
               They are useful for GUI editors to provide helptexts.
               Descriptions can be provided in various languages. -->
         <descriptions>
            <!-- description per language as defined by ISO 639 -->
            <description xml:lang="nl">Omschrijving</description>
         </descriptions>
         <!-- gui related -->
         <gui>
            <guiname xml:lang="nl">Omschrijving</guiname>
            <guiname xml:lang="en">Description</guiname>
            <guitype>field</guitype>
         </gui>
         <!-- editor related -->
         <editor>
            <positions>
               <!-- position in the input area of the editor -->
               <input>3</input>
               <!-- position in the list area of the editor -->
               <list>3</list>
               <!-- position in the search area of the editor -->
               <search>3</search>
            </positions>
         </editor>
         <!-- database related -->
         <db>
            <!-- name of the field in the database -->
            <name xml:lang="nl">description</name>
            <!-- MMBase datatype and demands on it -->
            <type key="false" notnull="false" size="1024" state="persistent">STRING</type>
         </db>
      </field>
   </fieldlist>
</builder>
