<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-producttype">
    <title>organisatietype</title>
    <task-description>Use this wizard to edit a organisatietype.</task-description>
    <action include="config/organisatie_type/create_organisatie_type.xml" />
    <action include="config/organisatie_type/delete_organisatie_type.xml" />
    <action include="config/organisatie_type/load_organisatie_type.xml" />
    <steps>
        <step form-schema="edit_organisatie_type" />
    </steps>
    <form-schema id="edit_organisatie_type">
       <title></title>
       <field name="naam" dtminlength="1"><prompt>naam (nl)</prompt></field>
       <field name="naam_eng" dtrequired="0"><prompt>naam (en)</prompt></field>
       <field name="naam_fra" dtrequired="0"><prompt>naam (fr)</prompt></field>
       <field name="naam_de" dtrequired="0"><prompt>naam (de)</prompt></field>
    </form-schema>
</wizard-schema>
