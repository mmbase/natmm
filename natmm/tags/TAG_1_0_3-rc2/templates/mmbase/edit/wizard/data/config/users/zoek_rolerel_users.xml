<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="rolerel" destination="users" minoccurs="0" maxoccurs="*" >
   <title>gebruikers</title>
   <item>
      <field name="voornaam" ftype="data" />
      <field name="achternaam" ftype="data" />
      <field name="account" ftype="data" />
<!--  <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field fdatapath="field[@name=&apos;rol&apos;]" ftype="line"><prompt>rol</prompt></field>
      <field ftype="startwizard" wizardname="config/users/users" />
-->
   </item>
   <command name="search" nodepath="users" age="-1" fields="voornaam,achternaam,account">
      <prompt>zoek gebruiker</prompt>
      <search-filter>
         <name>gebruikersnaam bevat</name>
         <search-fields>[account]</search-fields>
      </search-filter>
      <search-filter>
         <name>voornaam bevat</name>
         <search-fields>[voornaam]</search-fields>
      </search-filter>
      <search-filter>
         <name>achternaam bevat</name>
         <search-fields>[achternaam]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="users" role="rolerel">
         <field name="pos">-1</field>
      </relation>
   </action>
</list>