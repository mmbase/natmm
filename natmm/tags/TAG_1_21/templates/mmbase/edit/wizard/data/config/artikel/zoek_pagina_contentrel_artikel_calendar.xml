<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="artikel" minoccurs="0" maxoccurs="*" orderby="begindatum" ordertype="number">
   <title>activiteiten</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field name="begindatum" ftype="data"><prompt>aanvangsdatum</prompt></field>
      <field name="verloopdatum" ftype="data"><prompt>eingdatum</prompt></field>
      <field ftype="startwizard" wizardname="config/artikel/artikel_calendar" />
   </item>
   <command name="search" nodepath="artikel" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek artikel</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/artikel/artikel_calendar" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="artikel" role="contentrel">
         <field name="pos">{sum(//relation[@role='contentrel' and @lastitem='true' and object/@type ='artikel']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>