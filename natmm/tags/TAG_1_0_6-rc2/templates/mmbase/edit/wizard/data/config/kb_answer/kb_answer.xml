<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="kb_answer">
	<title>antwoord</title>
	<task-description>Use this wizard to edit an answer.</task-description>
	<action include="config/kb_answer/create_kb_answer.xml" />
  <action include="config/kb_answer/delete_kb_answer.xml" />
	<action include="config/kb_answer/load_kb_answer.xml" />
  <lists>
      <optionlist include="config/option_lists/true_false.xml" />
  </lists>
	<steps>
		<step form-schema="edit_kb_answer" />
	</steps>
	<form-schema id="edit_kb_answer">
    <!-- <field name="answer" ftype="line" /> -->
    <field name="answer" ftype="line" />
		<field name="date" />
		<field name="comment" ftype="html" rows="12" />
		<field name="visible" ftype="enum"><optionlist select="true_false"/></field>
		<!-- <field name="email" ftype="line" /> -->
		<list include="config/kb_question/add_kb_question.xml" />
	</form-schema>
</wizard-schema>
