<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-item">
	<title>items</title>
	<task-description>Use this wizard to edit an item.</task-description>
	<action include="config/items/create_items.xml" />
	<action include="config/items/delete_items.xml" />
	<action include="config/items/load_items.xml" />
	<steps>
		<step form-schema="edit_items" />
		<step form-schema="add_info" />
	</steps>
	<form-schema id="edit_items" extends="config/items/edit_items.xml" />
	<form-schema id="add_info">
		<title>metagegevens</title>
		<field name="titel" ftype="data" ><prompt>titel van dit item</prompt></field>
		<list include="config/pagina/add_pagina_posrel.xml" />
		<list include="config/mmevents/add_mmevents_posrel.xml" />
	</form-schema>
</wizard-schema>
