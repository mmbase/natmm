<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="shorty">
   <title>shorty</title>
   <description>
      <![CDATA[
   <h1>Shorties</h1>
   Shorties die voor iedere pagina onder een rubriek moeten gelden, kunnen aan de rubriek gekoppeld worden.<br/>
      ]]>
   </description>
   <action include="config/shorty/create_shorty.xml"/>
   <action include="config/shorty/delete_shorty.xml"/>
   <action include="config/shorty/load_shorty.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/images_position_shorty.xml" />
   </lists>
   <steps>
      <step form-schema="edit_shorty"/>
   </steps>
   <form-schema id="edit_shorty">
      <field name="titel" ftype="line"><prompt>titel</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
      
      <list include="config/pagina/zoek_shorty_portal_readmore_pagina.xml" />
      <list include="config/link/zoek_shorty_portal_readmore_link.xml" />
      <list include="config/artikel/zoek_shorty_portal_readmore_artikel.xml" />
      <list include="config/evenement/zoek_shorty_portal_readmore_evenement.xml" />
      
   </form-schema>
</wizard-schema>
