<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="edit-producttype">
    <title>projectfases</title>
    <task-description>Use this wizard to edit a producttype.</task-description>
    <action include="config/phases/create_phases.xml" />
    <action include="config/phases/delete_phases.xml" />
    <action include="config/phases/load_phases.xml" />
    <steps>
        <step form-schema="edit_phases" />
    </steps>
    <form-schema id="edit_phases">
       <title></title>
       <field name="name" dtminlength="1">
           <prompt>naam</prompt>
       </field>
       <field name="description" ftype="html" rows="16">
           <prompt>omschrijving</prompt>
       </field>
    </form-schema>
</wizard-schema>
