<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="bevestigings_teksten" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>bevestigings teksten</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
   </item>
   <command name="search" nodepath="bevestigings_teksten" age="-1" fields="titel" orderby="titel">
      <prompt>zoek bevestigings tekst</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="bevestigings_teksten" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='bevestigings_teksten']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>