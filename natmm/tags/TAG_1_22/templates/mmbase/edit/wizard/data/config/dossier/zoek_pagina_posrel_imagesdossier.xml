<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="dossier" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>dossier</title>
   <item>
      <field name="naam" ftype="line"><prompt>naam</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <list include="config/images/zoek_posrel_images.xml" />
   </item>
   <command name="search" nodepath="dossier" age="-1" fields="naam" orderby="naam">
      <prompt>zoek dossier</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[naam]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/dossier/dossier_images" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="dossier" role="posrel">
        <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='dossier']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>