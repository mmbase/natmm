<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="kb_category">
	<title>categorie</title>
	<task-description>Use this wizard to edit a pool.</task-description>
	<action include="config/kb_category/create_kb_category.xml" />
  <action include="config/kb_category/delete_kb_category.xml" />
	<action include="config/kb_category/load_kb_category.xml" />
  <lists>
      <optionlist include="config/option_lists/true_false.xml" />
  </lists>
	<steps>
		<step form-schema="edit_kb_category" />
	</steps>
	<form-schema id="edit_kb_category">
		<field name="name" ftype="line" />
		<field name="description" ftype="html" rows="12" />
		<field name="date" />
		<field name="visible" ftype="enum"><optionlist select="true_false"/></field>
		<list include="config/kb_question/add_kb_question.xml" />
    <list include="config/kb_category/add_kb_category_source.xml" />
    <list include="config/kb_category/add_kb_category_destination.xml" />
	</form-schema>
</wizard-schema>
