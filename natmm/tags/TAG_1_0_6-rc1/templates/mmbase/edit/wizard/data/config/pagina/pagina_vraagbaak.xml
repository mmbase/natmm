<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="pagina">
   <title>pagina (vraagbaak)</title>
   <description>
      <![CDATA[
	   <h1>Vraagbaak pagina</h1>
	   Deze editwizard kan worden gebruikt voor het koppelen van vraagbaken aan de pagina.<br/>
	   ]]>
   </description>
   <action include="config/pagina/create_pagina.xml"/>
   <action include="config/pagina/delete_pagina.xml"/>
   <action type="load">
     <field name="titel"/>
     <field name="kortetitel"/>
     <field name="titel_fra"/>
     <field name="titel_eng"/>
     <field name="titel_de"/>
     <field name="titel_zichtbaar"/>
     <field name="omschrijving"/>
     <field name="bron"/>
     <field name="metatags"/>
     <field name="creatiedatum"/>
     <field name="datumlaatstewijziging"/>
     <field name="embargo"/>
     <field name="verloopdatum"/>
     <field name="reageer"/>
     <field name="status"/>
     <relation destination="contentblocks" role="readmore"/>
     <relation destination="vraagbaak" role="contentrel">
      <object>
         <relation destination="paragraaf" role="posrel">
            <object>
                 <relation destination="images" role="posrel">
                     <object />
                 </relation>
                 <relation destination="link" role="posrel">
                     <object />
                 </relation>
                 <relation destination="attachments" role="posrel">
                     <object />
                 </relation>
                 <relation destination="pagina" role="readmore">
                     <object />
                 </relation>
             </object>
         </relation>      
         <relation destination="shorty" role="rolerel">
            <object />
         </relation>
         <relation destination="pools" role="posrel">
            <object />
         </relation>
         <relation destination="persoon" role="related">
            <object />
         </relation>
         <relation destination="terms" role="related">
            <object />
         </relation>         
         <relation destination="vraagbaak_keywords" role="related">
            <object />
         </relation>    
      </object>
    </relation>
   </action>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/images_position_nmintra.xml" />
   </lists>
   <steps>
      <step form-schema="edit_pagina"/>
   </steps>
   <form-schema id="edit_pagina">
      <field name="titel" ftype="data"><prompt>titel</prompt></field>
      <field name="titel_zichtbaar" ftype="enum"><prompt>titel zichtbaar</prompt><optionlist select="ja_nee"/></field>
      <field name="metatags" ftype="line"><prompt>redactionele aantekening</prompt></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>omschrijving</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging</prompt></field>
      <list include="config/vraagbaak/zoek_pagina_contentrel_vraagbaak.xml" />
      <list include="config/contentblocks/add_contentblocks_readmore_small.xml"/>
   </form-schema> 
</wizard-schema>
