<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="empty">
	<title>producten</title>
	<action include="config/items/create_items.xml" />
	<action include="config/items/delete_items.xml" />
	<action include="config/items/load_items_shop.xml" />
	<lists>
		<optionlist include="config/option_lists/discount_types.xml" />
		<optionlist include="config/option_lists/shopitem_types.xml" />
		<optionlist include="config/option_lists/shopitempool_types.xml" /> 
	</lists>
	<steps>
		<step form-schema="edit_shopitem" />
	</steps>
	<form-schema id="edit_shopitem">
    <title></title>
    <field name="titel" dtminlength="1"><prompt>naam</prompt></field>
    <field name="subtitle"><prompt>productsoort</prompt></field>
    <field name="type" ftype="enum"><prompt>type</prompt><optionlist select="product_types"></optionlist></field>
    <field name="id"><prompt>productnummer</prompt></field>
    <field name="price1"><prompt>prijs (in centen, zonder punt of komma)</prompt></field>    
    <field name="price2"><prompt>oude prijs (in centen, zonder punt of komma)</prompt></field>
    <field name="price3"><prompt>ledenprijs (in centen, zonder punt of komma)</prompt></field>
    <field name="price4"><prompt>oude ledenprijs (in centen, zonder punt of komma)</prompt></field>
    <list include="config/keywords/add_related.xml" />
    <field name="intro" ftype="html" rows="16" ><prompt>introductie</prompt></field>
    <field name="body" ftype="html" rows="24" ><prompt>tekst</prompt></field>
  	 <field name="creatiedatum" ftype="data"><prompt>creatiedatum</prompt></field>
    <field name="datumlaatstewijziging" ftype="data"><prompt>datumlaatstewijziging ______________________________</prompt></field>
    <!-- <field name="embargo"><prompt>verschijnings datum (producten zijn pas zichtbaar op de verschijningsdatum!)</prompt></field> -->
    <!-- <field name="verloopdatum"><prompt>verwijder datum</prompt></field> -->
    <list include="config/artikel/zoek_artikel_posrel_items.xml" />
    <list include="config/images/add_images_posrel_items.xml" />
    <list include="config/attachments/add_attachments_posrel.xml" />
</form-schema>
</wizard-schema>
