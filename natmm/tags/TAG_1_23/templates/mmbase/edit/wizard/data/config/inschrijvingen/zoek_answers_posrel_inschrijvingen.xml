<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="inschrijvingen" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>aanmeldingen</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field ftype="data" name="firstname" />
      <field ftype="data" name="lastname" />
      <field ftype="data" name="datum_inschrijving" />
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field ftype="startwizard" wizardname="config/inschrijvingen/inschrijvingen" />
   </item>
   <command name="search" nodepath="inschrijvingen" age="-1" fields="titel,firstname,lastname,datum_inschrijving" orderby="lastname">
      <prompt>zoek aanmelding</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>firstname bevat</name>
         <search-fields>[firstname]</search-fields>
      </search-filter>
      <search-filter>
         <name>lastname bevat</name>
         <search-fields>[lastname]</search-fields>
      </search-filter>
      <search-filter>
         <name>datum_inschrijving bevat</name>
         <search-fields>[datum_inschrijving]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/inschrijvingen/inschrijvingen" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="inschrijvingen" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='inschrijvingen']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>