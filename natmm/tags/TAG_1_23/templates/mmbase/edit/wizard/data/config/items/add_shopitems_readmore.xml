<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="items" minoccurs="1" maxoccurs="*">
	<title>producten waarnaar wordt doorverwezen (minimaal 1)</title>
	<item>
		<title></title>
		<description>producten</description>
		<field name="titel" ftype="data"><prompt>naam</prompt></field>
		<field fdatapath="field[@name=&apos;readmore&apos;]" >
				 <prompt>inleidend tekst voor de doorverwijzing</prompt>
		</field>
		<field fdatapath="." ftype="startwizard" inline="true" objectnumber="{object/@number}" wizardname="config/items/items_shop">
			<prompt></prompt>
		</field>
	</item>
	<action type="create">
		<relation role="readmore">
			<object type="items" />
		</relation>
	</action>
	<command name="search" nodepath="items" fields="titel" orderby="titel" age="-1">
    	<prompt>zoek product</prompt>
		<search-filter>
			<name>naam bevat</name>
			<search-fields>titel</search-fields>
		</search-filter>
	</command>
	<command name="startwizard" inline="true" wizardname="config/items/items_shop" objectnumber="new"/>
</list>
