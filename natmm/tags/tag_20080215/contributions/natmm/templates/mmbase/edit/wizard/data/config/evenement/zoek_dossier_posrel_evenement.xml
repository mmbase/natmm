<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="posrel" destination="evenement" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>activiteit</title>
   <item>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>     
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <list include="config/natuurgebieden/zoek_dossier_related_natuurgebieden.xml" />
   </item>
   <command name="search" nodepath="evenement,related,natuurgebieden" age="-1" 
         fields="evenement.titel,evenement.metatags,natuurgebieden.naam,evenement.number"
         constraints="evenement.soort='parent'" orderby="evenement.titel">
      <prompt>zoek evenement</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[evenement.titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[evenement.metatags]</search-fields>
      </search-filter>
      <search-filter>
         <name>natuurgebied</name>
         <search-fields>[natuurgebieden.naam]</search-fields>
      </search-filter>
      <search-filter>
         <name>nummer bevat</name>
         <search-fields>[evenement.number]</search-fields>
      </search-filter>
   </command>
   <action type="create">
      <relation destinationtype="evenement" role="posrel">
         <field name="pos">{sum(//relation[@role='posrel' and @lastitem='true' and object/@type ='evenement']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>