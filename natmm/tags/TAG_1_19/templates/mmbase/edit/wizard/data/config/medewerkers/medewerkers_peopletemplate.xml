<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="medewerkers">
   <title>medewerkers</title>
   <action include="config/medewerkers/create_medewerkers.xml"/>
   <action include="config/medewerkers/delete_medewerkers.xml"/>
   <action include="config/medewerkers/load_medewerkers.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
      <optionlist include="config/option_lists/female_male.xml" />
      <optionlist include="config/option_lists/active_inactive.xml" />
   </lists>
   <steps>
      <step form-schema="edit_medewerkers"/>
   </steps>
   <form-schema id="edit_medewerkers">
      <field name="prefix" ftype="line"><prompt>titel</prompt></field>
      <field name="firstname" ftype="line" ><prompt>voornaam</prompt></field>
      <field name="initials" ftype="line" ><prompt>initialen</prompt></field>
      <field name="suffix" ftype="line" ><prompt>tussenvoegsel</prompt></field>
      <field name="lastname" ftype="line" ><prompt>achternaam</prompt></field>
      <field name="titel_de" ftype="line" ><prompt>citaat</prompt></field>
      <field name="titel_fra" ftype="line" ><prompt>inleidend tekst</prompt></field>
      <field name="omschrijving" ftype="html" rows="20"><prompt>omschrijving</prompt></field>
      <list include="config/images/zoek_posrel_images.xml" />
   </form-schema>
</wizard-schema>
