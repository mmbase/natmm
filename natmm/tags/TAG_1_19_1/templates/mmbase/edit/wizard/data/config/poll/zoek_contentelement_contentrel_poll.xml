<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="poll" minoccurs="0" maxoccurs="*" orderby="embargo" ordertype="number" hidecommand="move-up|move-down">
   <title>poll</title>
   <item>
      <field name="titel" ftype="line"><prompt>titel</prompt></field>
      <field name="antwoord1" ftype="line"><prompt>antwoord 1</prompt></field>
      <field name="antwoord2" ftype="line"><prompt>antwoord 2</prompt></field>
      <field name="antwoord3" ftype="line"><prompt>antwoord 3</prompt></field>
      <field name="antwoord4" ftype="line"><prompt>antwoord 4</prompt></field>
      <field name="embargo"><prompt>verschijnt op website vanaf</prompt></field>
      <field name="verloopdatum"><prompt>verwijderd van website op _____________________</prompt></field>
      <list include="config/pools/add_pools_posrel_pos.xml" />
   </item>
   <command name="search" nodepath="link" age="-1" fields="titel,alt_tekst,metatags" orderby="url">
      <prompt>zoek link</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>alt tekst bevat</name>
         <search-fields>[alt_tekst]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="insert" />
   <action type="create">
      <relation role="contentrel">
            <object type="poll" /> <!-- necessary for command insert -->
            <field name="pos">-1</field>
      </relation>
   </action>
</list>

