<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="artikel" minoccurs="0" maxoccurs="*"
   orderby="begindatum" ordertype="number" hidecommand="move-up|move-down">
   <title>artikel</title>
   <item>
      <field ftype="data" name="titel"><prompt>titel</prompt></field>
      <field ftype="data" name="begindatum"><prompt>datum</prompt></field>
      <field ftype="startwizard" wizardname="config/artikel/artikel_weblog" />
   </item>
   <command name="search" nodepath="artikel" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek artikel</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/artikel/artikel_weblog" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="artikel" role="contentrel">
         <field name="pos">1</field>
      </relation>
   </action>
</list>