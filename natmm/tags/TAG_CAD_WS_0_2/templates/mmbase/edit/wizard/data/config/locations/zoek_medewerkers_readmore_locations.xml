<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="readmore" destination="locations" minoccurs="0" maxoccurs="*" >
   <title>locaties</title>
   <item>
      <field ftype="data" name="titel"><prompt>naam</prompt></field>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="line"><prompt>positie</prompt></field>
      <field fdatapath="field[@name=&apos;readmore&apos;]" ftype="line"><prompt>readmore</prompt></field>
      <field ftype="startwizard" wizardname="config/locations/locations" />
   </item>
   <command name="search" nodepath="locations" age="-1" fields="titel" orderby="titel">
      <prompt>zoek lokatie</prompt>
      <search-filter>
         <name>naam bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/locations/locations" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="locations" role="readmore">
         <field name="pos">{sum(//relation[@role='readmore' and @lastitem='true' and object/@type ='locations']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>