<?xml version="1.0"?>
<!DOCTYPE list PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<list role="contentrel" destination="vraagbaak" minoccurs="0" maxoccurs="*" orderby="field[@name='pos']" ordertype="number">
   <title>vraagbaak artikel</title>
   <item>
      <title></title>
      <field fdatapath="field[@name=&apos;pos&apos;]" ftype="data"><prompt>positie</prompt></field>
      <field name="titel" ftype="data"><prompt>titel</prompt></field>
      <field ftype="startwizard" wizardname="config/vraagbaak/vraagbaak"><prompt></prompt></field>
   </item>
   <command name="search" nodepath="vraagbaak" age="-1" fields="titel,metatags" orderby="titel">
      <prompt>zoek artikel</prompt>
      <search-filter>
         <name>titel bevat</name>
         <search-fields>[titel]</search-fields>
      </search-filter>
      <search-filter>
         <name>redactionele aantekening</name>
         <search-fields>[metatags]</search-fields>
      </search-filter>
   </command>
   <command name="startwizard" inline="true" wizardname="config/vraagbaak/vraagbaak" objectnumber="new">
       <prompt></prompt>
   </command>
   <action type="create">
      <relation destinationtype="vraagbaak" role="contentrel">
         <field name="pos">{sum(//relation[@role='contentrel' and @lastitem='true' and object/@type ='vraagbaak']/field[@name='pos'])+{$pos}}</field>
      </relation>
   </action>
</list>