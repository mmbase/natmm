<?xml version="1.0"?>
<!DOCTYPE wizard-schema PUBLIC "-//MMBase/DTD editwizard 1.0//EN" "http://www.mmbase.org/dtd/wizard-schema_1_0.dtd">
<wizard-schema id="pagina">
   <title>pagina (home)</title>
   <description>
      <![CDATA[
   <h1>Elle home pagina</h1>
   This editwizard can be used to edit the Elle demo page.<br/>
      ]]>
   </description>
   <action include="config/pagina/create_pagina.xml"/>
   <action include="config/pagina/delete_pagina.xml"/>
   <action include="config/pagina/load_pagina.xml"/>
   <lists>
      <optionlist include="config/option_lists/ja_nee.xml" />
   </lists>
   <steps>
      <step form-schema="edit_pagina"/>
   </steps>
   <form-schema id="edit_pagina">
      <field name="titel_eng" ftype="line"><prompt>title (en)</prompt></field>
      <field name="titel_fra" ftype="line"><prompt>title (fr)</prompt></field>
      <field name="titel_de" ftype="line"><prompt>title (de)</prompt></field>
      <field name="titel" ftype="line"><prompt>title (nl)</prompt></field>
      <field name="creatiedatum" ftype="data"><prompt>creation date</prompt></field>
      <field name="datumlaatstewijziging" ftype="data"><prompt>date of last change ___________________________</prompt></field>
      <list include="config/linklijst/zoek_pagina_posrel_linklijst_ml.xml" />
   </form-schema> 
</wizard-schema>
